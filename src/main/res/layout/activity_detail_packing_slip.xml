<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggGray"
    tools:context="id.co.beton.saleslogistic_trackingsystem.AppBundle.PackingSlip.DetailPackingSlipActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/w_toolber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/colorAccent"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>
    <ListView
        android:layout_marginRight="@dimen/margin_from_left_right"
        android:layout_marginLeft="@dimen/margin_from_left_right"
        android:layout_marginBottom="@dimen/margin_from_top_text"
        android:dividerHeight="0dp"
        android:divider="@color/bggGray"
        android:id="@+id/lv_item"
        android:layout_above="@id/ll_footer"
        android:layout_below="@id/w_toolber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
    <LinearLayout
        android:id="@+id/ll_footer"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_penerimaan"
            android:textColor="@color/white"
            android:text="Penerimaan"
            android:background="@color/bgNav"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_penolakan"
            android:textColor="@color/white"
            android:text="Penolakan"
            android:background="@color/grayDark"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>
