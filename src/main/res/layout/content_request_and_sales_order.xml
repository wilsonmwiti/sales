<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="@dimen/margin_from_top_text"
        android:id="@+id/lr_request_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/l1"
        android:background="@drawable/bg_white_with_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_with_radius"

            android:orientation="vertical"
            android:padding="@dimen/padding_from_border"
            >
            <TextView
                android:id="@+id/tv_request_order_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Request Order No)"
                android:layout_marginLeft="@dimen/padding_from_border"
                android:textColor="@color/textPrimaryColor"
                android:textSize="@dimen/text_primary_size" />

            <TextView
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_invoice_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="total invoice"
                android:layout_marginLeft="@dimen/padding_from_border"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_more_normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bggGray"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:paddingLeft="@dimen/padding_from_border"
            android:paddingRight="@dimen/padding_from_border"
            android:paddingTop="@dimen/padding_from_border"
            android:paddingBottom="@dimen/padding_from_border"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="@dimen/width_text_view"
                    android:layout_height="wrap_content"
                    android:text="@string/order_date"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tv_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="( Order Date )"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/margin_from_top_text"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="@dimen/width_text_view"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:textColor="@color/colorAccent"
                    android:id="@+id/tv_status_request_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="( Request Order )"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>