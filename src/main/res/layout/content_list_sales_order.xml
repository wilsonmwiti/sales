<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_white_with_radius"
    android:padding="1dp"
    android:layout_marginTop="@dimen/margin_from_left_right"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="@dimen/margin_from_top_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_from_header"
        >

        <TextView
            android:id="@+id/tv_nama_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer 1"
            android:textColor="@color/textPrimaryColor"
            android:textSize="@dimen/text_primary_size" />

        <TextView
            android:id="@+id/tv_request_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="(Payment. No. )"
            android:textColor="@color/textPrimaryColor"
            android:textSize="@dimen/text_more_normal" />

        <TextView
            android:id="@+id/tv_total_harga_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="20000"
            android:textColor="@color/bgNav"
            android:textSize="@dimen/text_primary_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bggGray"
        android:layout_marginBottom="@dimen/padding_from_border"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_from_border"
        android:paddingRight="@dimen/padding_from_border"
        android:paddingTop="@dimen/padding_from_border"
        android:paddingBottom="@dimen/padding_from_border"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="@dimen/width_text_view"
                android:layout_height="wrap_content"
                android:text="@string/order_date"
                android:textColor="@color/textPrimaryColor"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:id="@+id/tv_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="@dimen/text_normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/margin_from_top_text"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="@dimen/width_text_view"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textColor="@color/textPrimaryColor"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="@dimen/text_normal" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_from_top_text"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="@dimen/width_text_view"
                android:layout_height="wrap_content"
                android:text="@string/sales_order_date"
                android:textColor="@color/textPrimaryColor"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:id="@+id/tv_sales_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="@dimen/text_normal" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_from_top_text"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="@dimen/width_text_view"
                android:layout_height="wrap_content"
                android:text="@string/sales_order_no"
                android:textColor="@color/textPrimaryColor"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:id="@+id/tv_sales_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="@dimen/text_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_from_top_text"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="@dimen/width_text_view"
                android:layout_height="wrap_content"
                android:text="@string/packing_slip_date"
                android:textColor="@color/textPrimaryColor"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:id="@+id/tv_packing_slip_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="@dimen/text_normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/margin_from_top_text"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="@dimen/width_text_view"
                android:layout_height="wrap_content"
                android:text="@string/packing_slip_no"
                android:textColor="@color/textPrimaryColor"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:id="@+id/tv_packing_slip_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="@dimen/text_normal" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>