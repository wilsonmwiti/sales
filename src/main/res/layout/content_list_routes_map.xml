<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_from_border"
            android:layout_marginLeft="@dimen/padding_from_border"
            android:layout_marginRight="@dimen/padding_from_border">

            <ImageView
                android:id="@+id/iv_icon_rute"
                android:layout_marginTop="@dimen/margin_from_top_text"
                android:src="@drawable/marker_blue"
                android:layout_width="30dp"
                android:layout_height="30dp"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/padding_from_border"
            android:layout_marginBottom="@dimen/margin_from_top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<TextView-->
                <!--android:id="@+id/tv_nama"-->
                <!--android:textSize="@dimen/text_primary_size"-->
                <!--android:textColor="@color/textPrimaryColor"-->
                <!--android:text="(Nama Branch)"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->
            <TextView
                android:id="@+id/tv_alamat"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/textPrimaryColor"
                android:text="Jl. Soekarno Hatta No.. 409"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_jarak"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/colorPrimary"
                    android:text="100m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_from_top_text"/>

                <View
                    android:layout_marginTop="10dp"
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>