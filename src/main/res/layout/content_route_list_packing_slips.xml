<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/bggGray"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginBottom="@dimen/margin_from_top_text"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/padding_from_border"
        android:layout_marginRight="@dimen/padding_from_border"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_with_radius"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Customer"
                android:layout_marginTop="@dimen/padding_from_border"
                android:layout_marginLeft="@dimen/padding_from_border"
                android:textColor="@color/textPrimaryColor"
                android:textSize="@dimen/text_under_big" />
            <RelativeLayout
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="@dimen/padding_from_border"
                android:layout_marginTop="@dimen/padding_from_border"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_checkbox">

                <CheckBox
                    android:text=""
                    android:id="@+id/cb_select_packing_slip"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/custom_checkbox"
                    android:layout_height="wrap_content">
                </CheckBox>
            </RelativeLayout>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="( Alamat )"
            android:layout_marginTop="@dimen/padding_from_border"
            android:layout_marginLeft="@dimen/padding_from_border"
            android:textColor="@color/black"
            android:textSize="@dimen/text_more_normal" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_from_top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bggGray"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_from_top_text"
                android:layout_marginLeft="@dimen/padding_from_border"
                android:layout_marginRight="@dimen/padding_from_border"
                android:layout_marginTop="@dimen/margin_from_top_text"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Sales Order No."
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tv_sales_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_from_top_text"
                android:layout_marginLeft="@dimen/padding_from_border"
                android:layout_marginRight="@dimen/padding_from_border"
                android:layout_marginTop="@dimen/margin_from_top_text"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Packing Slip No."
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tv_packing_slip_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>