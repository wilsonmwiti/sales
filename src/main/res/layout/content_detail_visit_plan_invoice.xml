<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bggGray"
    android:layout_height="match_parent"
    tools:context="id.co.beton.saleslogistic_trackingsystem.AppBundle.OrderAndPayment.RequestOrder.DetailRequestOrderActivity">

        <ListView
            android:id="@+id/lv_invoice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_from_left_right"
            android:layout_marginRight="@dimen/margin_from_left_right"
            android:divider="@color/white"
            android:dividerHeight="0dp">
        </ListView>

        <RelativeLayout
            android:id="@+id/rl_show_check"
            android:paddingLeft="@dimen/padding_from_header"
            android:paddingTop="@dimen/padding_from_border"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:background="@color/bgNav"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/satu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_from_top_text"
                    android:orientation="horizontal">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="@string/number_of_invoice"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:text=":"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_normal" />

                        <TextView
                            android:id="@+id/tv_number_of_invoice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="2"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_from_top_text"
                    android:layout_marginBottom="15dp"
                    android:layout_below="@+id/satu"
                    android:orientation="horizontal">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="@string/total_invoice"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:text=":"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_normal" />

                        <TextView
                            android:id="@+id/tv_total_invoice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Rp.53.550.000,-"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_white_with_radius">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/check" />
                </LinearLayout>

        </RelativeLayout>
</RelativeLayout>