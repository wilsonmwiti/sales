<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bggGray"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_with_radius"
        android:paddingBottom="@dimen/padding_from_border"
        android:layout_marginBottom="@dimen/padding_from_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_from_header"
            android:paddingTop="@dimen/padding_from_header"
            android:paddingRight="@dimen/padding_from_header"
            android:paddingBottom="@dimen/padding_from_border"
            >

            <TextView
                android:id="@+id/tv_payment_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="(No Pembyaran )"
                android:textColor="@color/textPrimaryColor"
                android:textSize="@dimen/text_more_normal" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/width_text_view"
                    android:layout_height="wrap_content"
                    android:text="@string/total_payment"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="@dimen/text_normal" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="@dimen/text_normal" />
                <TextView
                    android:id="@+id/tv_payment_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp.34.600.000,-"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/width_text_view"
                    android:layout_height="wrap_content"
                    android:text="@string/status"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="@dimen/text_normal" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="@dimen/text_normal" />
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Received Confirmation"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bggGray"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_from_border"
            android:paddingRight="@dimen/padding_from_border"
            android:paddingTop="@dimen/padding_from_border"
            android:paddingBottom="@dimen/padding_from_border"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="@dimen/width_text_view"
                    android:layout_height="wrap_content"
                    android:text="@string/no_of_invoice"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="@dimen/text_normal" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tv_no_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="( No Of Invoice )"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_from_top_text"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="@dimen/width_text_view"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_method"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tv_payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimaryColor"
                    android:text="( Paymen Method )"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/margin_from_top_text"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="@dimen/width_text_view"
                    android:layout_height="wrap_content"
                    android:text="@string/receipt_no"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="@dimen/text_normal" />
                <TextView
                    android:id="@+id/tv_receive_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="( Receipt No )"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/margin_from_top_text"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="@dimen/width_text_view"
                    android:layout_height="wrap_content"
                    android:text="@string/processed_by"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/textPrimaryColor"
                    android:textSize="@dimen/text_normal" />
                <TextView
                    android:id="@+id/tv_processed_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimaryColor"
                    android:text="( Processed By )"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>