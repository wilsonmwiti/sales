<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bggGray"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/padding_from_border"
        android:layout_marginBottom="@dimen/margin_from_top_text"
        android:background="@drawable/bg_white_with_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_ttitle"
                android:orientation="vertical"
                android:layout_width="220dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_under_big"
                    android:textColor="@color/black"
                    android:text="@string/change_route"
                    android:textStyle="bold"
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/margin_from_top_text"
                    android:textSize="@dimen/text_primary_size"
                    android:text="11:05 AM"
                    android:textColor="@color/bgNav"
                    android:id="@+id/tv_jam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_icon_permission"
                android:layout_gravity="end|right"
                android:layout_marginTop="@dimen/margin_from_top_text"
                android:src="@drawable/tanya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:textColor="@color/grayDark"
            android:layout_marginTop="@dimen/margin_from_top_header"
            android:text="From Soekarno Hatta St. to Mohamad Toha St"
            android:textSize="@dimen/text_small"
            android:id="@+id/tv_keterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/grayDark"
            android:layout_marginTop="@dimen/margin_from_top_text"
            android:text="-"
            android:textSize="@dimen/text_small"
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>