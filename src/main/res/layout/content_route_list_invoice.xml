<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/bggGray"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginBottom="@dimen/margin_from_top_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_with_radius"
        android:layout_marginTop="@dimen/padding_from_border"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_invoice_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="( Inv No. )"
                android:layout_marginTop="@dimen/padding_from_border"
                android:layout_marginLeft="@dimen/padding_from_border"
                android:textColor="@color/textPrimaryColor"
                android:textSize="@dimen/text_under_big" />

            <RelativeLayout
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="@dimen/padding_from_border"
                android:layout_marginTop="@dimen/padding_from_border"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_checkbox">

                <CheckBox
                    android:text=""
                    android:id="@+id/cb_select_invoice"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/custom_checkbox"
                    android:layout_height="wrap_content">
                </CheckBox>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_total_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp.129922992"
            android:layout_marginLeft="@dimen/padding_from_border"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_more_normal" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bggGray"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_from_top_text"
                android:layout_marginLeft="@dimen/padding_from_header"
                android:layout_marginRight="@dimen/padding_from_header"
                android:layout_marginTop="@dimen/margin_from_top_text"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="@string/due_date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tv_due_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="( Due date )"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bggGray"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_from_top_text"
                android:layout_marginLeft="@dimen/padding_from_header"
                android:layout_marginRight="@dimen/padding_from_header"
                android:layout_marginTop="@dimen/margin_from_top_text"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="@string/sales_order_no"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tv_sales_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=" ( Sales Order No.)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bggGray"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_from_top_text"
                android:layout_marginLeft="@dimen/padding_from_header"
                android:layout_marginRight="@dimen/padding_from_header"
                android:layout_marginTop="@dimen/margin_from_top_text"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="@string/packing_slip_date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tv_packing_slip_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="( Packing Slip Date.)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bggGray"
            android:layout_marginBottom="@dimen/padding_from_border"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_from_top_text"
                android:layout_marginLeft="@dimen/padding_from_header"
                android:layout_marginRight="@dimen/padding_from_header"
                android:layout_marginTop="@dimen/margin_from_top_text"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="@string/packing_slip_no"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tv_packing_slip_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=" ( Packing Slip No.)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>